<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- القالب الرئيسي -->
    <template id="statement_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <t t-call="account_statement_report.statement_content"/>
                </div>
            </t>
        </t>
    </template>

    <!-- محتوى التقرير -->
    <template id="statement_content">
        <div class="account-statement">
            <div class="header">
                <h2>Customer Account Statement</h2>
                <div class="row">
                    <div class="col-6">
                        <p><strong>Customer:</strong> <span t-field="doc.partner_id"/></p>
                        <p><strong>Date From:</strong> <span t-field="doc.date_from"/></p>
                        <p><strong>Date To:</strong> <span t-field="doc.date_to"/></p>
                    </div>
                    <div class="col-6 text-right">
                        <p><strong>Company:</strong> <span t-field="doc.company_id"/></p>
                        <p><strong>Print Date:</strong> 
                            <span t-esc="datetime.datetime.now().strftime('%d/%m/%Y')"/>
                        </p>
                    </div>
                </div>
            </div>

            <table class="table table-bordered mt-3">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Description</th>
                        <th>Reference</th>
                        <th>Debit</th>
                        <th>Credit</th>
                        <th>Balance</th>
                    </tr>
                </thead>
                <tbody>
                    <t t-set="balance" t-value="0"/>
                    <t t-foreach="doc._get_statement_lines()" t-as="line">
                        <t t-set="balance" t-value="balance + line['debit'] - line['credit']"/>
                        <tr>
                            <td><span t-esc="line['date']"/></td>
                            <td><span t-esc="line['name']"/></td>
                            <td><span t-esc="line['ref']"/></td>
                            <td class="text-right">
                                <span t-esc="format_amount(line['debit'], doc.company_id.currency_id)"/>
                            </td>
                            <td class="text-right">
                                <span t-esc="format_amount(line['credit'], doc.company_id.currency_id)"/>
                            </td>
                            <td class="text-right">
                                <span t-esc="format_amount(balance, doc.company_id.currency_id)"/>
                            </td>
                        </tr>
                    </t>
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="5" class="text-right"><strong>Ending Balance:</strong></td>
                        <td class="text-right">
                            <strong><span t-esc="format_amount(balance, doc.company_id.currency_id)"/></strong>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </template>
</odoo>
