<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- القالب الرئيسي المعدل -->
    <template id="account_statement_template" name="Account Statement Report">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <div class="oe_structure"/>
                    <div class="account-statement">
                        <div class="header" style="margin-bottom: 20px;">
                            <h2 style="text-align: center; color: #2E86C1;">Customer Account Statement</h2>
                            <div class="row" style="margin-bottom: 15px;">
                                <div class="col-6">
                                    <p><strong>Customer:</strong> <span t-field="doc.partner_id"/></p>
                                    <p><strong>Date From:</strong> <span t-field="doc.date_from"/></p>
                                    <p><strong>Date To:</strong> <span t-field="doc.date_to"/></p>
                                </div>
                                <div class="col-6 text-right">
                                    <p><strong>Company:</strong> <span t-field="doc.company_id"/></p>
                                    <p><strong>Print Date:</strong> 
                                        <span t-esc="datetime.datetime.now().strftime('%d/%m/%Y %H:%M')"/>
                                    </p>
                                </div>
                            </div>
                        </div>

                        <table class="table table-bordered" style="width: 100%; border-collapse: collapse;">
                            <thead style="background-color: #f2f2f2;">
                                <tr>
                                    <th style="padding: 8px; border: 1px solid #ddd;">Date</th>
                                    <th style="padding: 8px; border: 1px solid #ddd;">Description</th>
                                    <th style="padding: 8px; border: 1px solid #ddd;">Reference</th>
                                    <th style="padding: 8px; border: 1px solid #ddd; text-align: right;">Debit</th>
                                    <th style="padding: 8px; border: 1px solid #ddd; text-align: right;">Credit</th>
                                    <th style="padding: 8px; border: 1px solid #ddd; text-align: right;">Balance</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="balance" t-value="0"/>
                                <t t-foreach="doc._get_statement_lines()" t-as="line">
                                    <t t-set="balance" t-value="balance + line['debit'] - line['credit']"/>
                                    <tr>
                                        <td style="padding: 8px; border: 1px solid #ddd;">
                                            <span t-esc="line['date']"/>
                                        </td>
                                        <td style="padding: 8px; border: 1px solid #ddd;">
                                            <span t-esc="line['name']"/>
                                        </td>
                                        <td style="padding: 8px; border: 1px solid #ddd;">
                                            <span t-esc="line['ref']"/>
                                        </td>
                                        <td style="padding: 8px; border: 1px solid #ddd; text-align: right;">
                                            <span t-esc="format_amount(line['debit'], doc.company_id.currency_id)"/>
                                        </td>
                                        <td style="padding: 8px; border: 1px solid #ddd; text-align: right;">
                                            <span t-esc="format_amount(line['credit'], doc.company_id.currency_id)"/>
                                        </td>
                                        <td style="padding: 8px; border: 1px solid #ddd; text-align: right;">
                                            <span t-esc="format_amount(balance, doc.company_id.currency_id)"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                            <tfoot style="background-color: #f2f2f2;">
                                <tr>
                                    <td colspan="3" style="padding: 8px; border: 1px solid #ddd;">
                                        <strong>Total Transactions:</strong> 
                                        <span t-esc="len(doc._get_statement_lines())"/>
                                    </td>
                                    <td colspan="2" style="padding: 8px; border: 1px solid #ddd; text-align: right;">
                                        <strong>Ending Balance:</strong>
                                    </td>
                                    <td style="padding: 8px; border: 1px solid #ddd; text-align: right;">
                                        <strong>
                                            <span t-esc="format_amount(balance, doc.company_id.currency_id)"/>
                                        </strong>
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>
