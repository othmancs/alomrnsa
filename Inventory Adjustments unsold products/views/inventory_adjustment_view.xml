<odoo>
    <record id="view_product_non_adjusted" model="ir.ui.view">
    <field name="name">product_template_non_adjusted_view</field>
    <field name="model">product.template</field>
    <field name="arch" type="xml">
        <tree>
            <field name="name"/>
            <field name="default_code"/>
            <field name="adjustment_count"/>
        </tree>
    </field>
</record>

<record id="action_product_non_adjusted" model="ir.actions.act_window">
    <field name="name">products_not_adjusted</field>
    <field name="res_model">product.template</field>
    <field name="view_mode">tree</field>
    <field name="domain">[('adjustment_count', '=', 0)]</field>
</record>

<menuitem id="inventory_adjustments_menu" name="inventory_adjustments" parent="stock.menu_stock_root" action="action_product_non_adjusted"/>
</odoo>
