<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="template_customer_statement_report" inherit_id="report.minimal_layout">
        <t t-call="report.minimal_layout">
            <t t-foreach="docs" t-as="doc">
                <t t-call="customer_account_statement_OCS.report_customer_statement_template"/>
            </t>
        </t>
    </template>

    <report id="action_customer_statement_report"
            name="customer_account_statement_OCS.report_customer_statement_template"
            model="customer.statement.wizard"
            report_type="qweb-pdf"
            string="Customer Statement"
            attachment_use="False"/>
</odoo>
