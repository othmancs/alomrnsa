<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_customer_statement_template">
        <t t-call="web.external_layout">
            <!-- تعيين المتغيرات من البيانات الممررة -->
            <t t-set="partner" t-value="env['res.partner'].browse(data.get('partner_id'))"/>
            <t t-set="date_from" t-value="data.get('date_from')"/>
            <t t-set="date_to" t-value="data.get('date_to')"/>
            <t t-set="docs" t-value="data.get('docs', [])"/>
            <t t-set="initial_balance" t-value="data.get('initial_balance', 0.0)"/>
            <t t-set="closing_balance" t-value="data.get('closing_balance', 0.0)"/>
            <t t-set="show_initial_balance" t-value="data.get('show_initial_balance', False)"/>
        
            <div class="page">
                <!-- Header Section -->
                <div class="row mb-4">
                    <div class="col-6">
                        <h2>Customer Account Statement</h2>
                        <div>
                            <strong>Customer:</strong>
                            <!-- التصحيح: استخدام t-field مع حقل محدد -->
                            <span t-field="partner.name" t-field-options='{"widget": "contact"}'/>
                        </div>
                        <div>
                            <strong>Period:</strong>
                            <span t-esc="date_from"/> to <span t-esc="date_to"/>
                        </div>
                    </div>
                    <div class="col-6 text-right">
                        <div>
                            <strong>Statement Date:</strong>
                            <span t-esc="fields.Date.context_today().strftime('%Y-%m-%d')"/>
                        </div>
                    </div>
                </div>
        
                <!-- Initial Balance -->
                <div t-if="show_initial_balance" class="row mb-2">
                    <div class="col-12">
                        <strong>Initial Balance:</strong>
                        <span t-esc="format_amount(initial_balance, partner.currency_id)"/>
                    </div>
                </div>
        
                <!-- Transaction Lines -->
                <table class="table table-sm table-bordered mt-3">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Document</th>
                            <th>Description</th>
                            <th class="text-right">Debit</th>
                            <th class="text-right">Credit</th>
                            <th class="text-right">Balance</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="docs" t-as="line">
                            <tr>
                                <td><span t-esc="line.get('date', '')"/></td>
                                <td><span t-esc="line.get('move_name', line.get('reference', ''))"/></td>
                                <td><span t-esc="line.get('name', '')"/></td>
                                <td class="text-right">
                                    <span t-esc="format_amount(line.get('debit', 0.0), partner.currency_id)"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="format_amount(line.get('credit', 0.0), partner.currency_id)"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="format_amount(line.get('balance', 0.0), partner.currency_id)"/>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
        
                <!-- Closing Balance -->
                <div class="row mt-3">
                    <div class="col-12 text-right">
                        <strong>Closing Balance:</strong>
                        <span t-esc="format_amount(closing_balance, partner.currency_id)"/>
                        <t t-if="closing_balance &lt; 0">
                            (Credit)
                        </t>
                        <t t-else="">
                            (Debit)
                        </t>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
