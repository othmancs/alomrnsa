<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="bstt_account_invoice.dun_bank_info">
        <div style="page-break-inside: avoid; text-right;direction: ltr">
            <div class="row">
                <div class="col-4" style="text-align:center;padding-bottom: 20px;"></div>
                <div class="col-4" style="text-align:center;padding-bottom: 20px;"></div>
                <div class="col-4" style="text-align:center;padding-bottom: 20px;"></div>
            </div>
            <div class="row">
                <div class="col-8" style="text-align:left; font-weight: bold;white-space:nowrap ">For TELEGRAPHIC
                    TRANSFER (TT), please transfer to:
                </div>
                <div class="col-4" style="text-align:right; font-weight: bold;">الرجاء التحويل إالى</div>

            </div>
            <div class="row">
                <div class="col-4 border" style="text-align:left;">ACCOUNT NAME</div>
                <div class="col-4 border" style="text-align:center;">
                    <span t-field="o.partner_bank_id.acc_holder_name"></span>
                </div>
                <div class="col-4 border" style="text-align:right;">اسم الحساب</div>
            </div>
            <div class="row">
                <div class="col-4 border" style="text-align:left;">BANK NAME</div>
                <div class="col-4 border" style="text-align:center;">
                    <span t-field="o.partner_bank_id.bank_id.name"></span>
                </div>
                <div class="col-4 border" style="text-align:right;">اسم البنك</div>
            </div>
            <div class="row">
                <div class="col-4 border" style="text-align:left;">A/C NO</div>
                <div class="col-4 border" style="text-align:center;">
                    <span t-field="o.partner_bank_id.acc_number"></span>
                </div>
                <div class="col-4 border" style="text-align:right;">رقم الحساب</div>
            </div>
            <div class="row">
                <div class="col-4 border" style="text-align:left;">IBAN #</div>
                <div class="col-4 border" style="text-align:center;">
                    <span t-esc="o.partner_bank_id.bank_bic"></span>
                </div>
                <div class="col-4 border" style="text-align:right;">رقم أيبان</div>
            </div>
            <div class="row">
                <div class="col-4 border" style="text-align:left;">Swift Code</div>
                <div class="col-4 border" style="text-align:center;">
                    <span t-esc="o.partner_bank_id.swift_code"></span>
                </div>
                <div class="col-4 border" style="text-align:right;">سويفت كود</div>
            </div>
        </div>
    </template>

    <template id="arabic_english_invoice" inherit_id="l10n_gcc_invoice.arabic_english_invoice">

        <xpath expr="//t[@t-call='web.external_layout']" position="attributes">
            <!--            <attribute name="style">font-size: small;direction: rtl;</attribute>-->
            <attribute name="style">FONT-SIZE: 11pt; FONT-FAMILY: 'Times New Roman';direction: rtl;</attribute>
        </xpath>
        <xpath expr="//h3" position="replace">
            <h3 style="text-align: center !important;">
                <div class="row text-center"
                     style="text-align: center !important;border-radius: 8px;background-color: #e7edef;margin: 15px;">
                    <div class="col-5 " style="text-align: right !important;">
                        <span t-if="o.move_type == 'out_invoice' and o.state == 'posted'">
                            Tax Invoice
                        </span>
                        <span t-if="o.move_type == 'out_invoice' and o.state == 'draft'">
                            Draft Invoice
                        </span>
                        <span t-if="o.move_type == 'out_invoice' and o.state == 'cancel'">
                            Cancelled Invoice
                        </span>
                        <span t-if="o.move_type == 'out_refund'">
                            Credit Note
                        </span>
                        <span t-if="o.move_type == 'in_refund'">
                            Vendor Credit Note
                        </span>
                        <span t-if="o.move_type == 'in_invoice'">
                            Vendor Bill
                        </span>
                    </div>
                    <div class="col-5 " style="text-align: left !important;">
                        <span t-if="o.move_type == 'out_invoice' and o.state == 'posted'">
                            فاتورة ضريبية
                        </span>
                        <span t-if="o.move_type == 'out_invoice' and o.state == 'draft'">
                            مسودة فاتورة
                        </span>
                        <span t-if="o.move_type == 'out_invoice' and o.state == 'cancel'">
                            فاتورة ملغاة
                        </span>
                        <span t-if="o.move_type == 'out_refund'">
                            إشعار خصم
                        </span>
                        <span t-if="o.move_type == 'in_refund'">
                            إشعار خصم المورد
                        </span>
                        <span t-if="o.move_type == 'in_invoice'">
                            فاتورة المورد
                        </span>
                    </div>
                </div>
            </h3>
        </xpath>
        <xpath expr="//div[@id='informations']" position="replace">
        </xpath>
        <xpath expr="//h3" position="after">
            <div id="informations" style="margin-left: 15px;margin-right: 15px;">
                <div class="row">
                    <div class="col-1"/>
                    <div class="col-8">
                        <div class="row" t-if="o.name" name="inv_name">
                            <div class="col-4">
                                <strong style="white-space:nowrap">Invoice Number:
                                </strong>
                            </div>
                            <div class="col-4 text-center">
                                <span t-if="o.name != '/'" t-field="o.name"/>
                            </div>
                            <div class="col-4 text-right">
                                <strong style="white-space:nowrap">:
                                    رقم الفاتورة
                                </strong>
                            </div>
                        </div>
                        <div class="row" t-if="o.invoice_date" name="invoice_date">
                            <div class="col-4">
                                <strong style="white-space:nowrap">Invoice Date:
                                </strong>
                            </div>
                            <div class="col-4 text-center">
                                <span t-field="o.invoice_date"/>
                            </div>
                            <div class="col-4 text-right">
                                <strong style="white-space:nowrap">:
                                    تاريخ الفاتورة
                                </strong>
                            </div>
                        </div>
                        <div class="row"
                             t-if="o.invoice_date_due and o.move_type == 'out_invoice' and o.state == 'posted'"
                             name="due_date">
                            <div class="col-4">
                                <strong style="white-space:nowrap">Due Date:
                                </strong>
                            </div>
                            <div class="col-4 text-center">
                                <span t-field="o.invoice_date_due"/>
                            </div>
                            <div class="col-4 text-right">
                                <strong style="white-space:nowrap">:
                                    تاريخ الاستحقاق
                                </strong>
                            </div>
                        </div>
                        <div class="row" t-if="o.l10n_sa_delivery_date" name="delivery_date">
                            <div class="col-4">
                                <strong style="white-space:nowrap">Delivery Date:
                                </strong>
                            </div>
                            <div class="col-4 text-center">
                                <span t-field="o.l10n_sa_delivery_date"/>
                            </div>
                            <div class="col-4 text-right">
                                <strong style="white-space:nowrap">:
                                    تاريخ التوصيل
                                </strong>
                            </div>
                        </div>
                        <div class="row" t-if="o.invoice_origin" name="origin">
                            <div class="col-4">
                                <strong style="white-space:nowrap">Source:
                                </strong>
                            </div>
                            <div class="col-4 text-center">
                                <span t-field="o.invoice_origin"/>
                            </div>
                            <div class="col-4 text-right">
                                <strong style="white-space:nowrap">:
                                    المصدر
                                </strong>
                            </div>
                        </div>

                    </div>
                    <div class="col-3" colspan="5" name="qr_code">
                        <t t-esc="o._compute_qr_code_str()"/>
                        <img t-if="o.l10n_sa_qr_code_str" style="display:block;margin: auto;"
                             t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s'%('QR', o.l10n_sa_qr_code_str, 100, 100)"/>
                    </div>
                </div>
                <div class="col-auto mw-100 mb-4" t-if="o.ref" name="reference">
                    <div class="col-4">
                        <strong style="white-space:nowrap">Reference:
                        </strong>
                    </div>
                    <div class="col-4">
                        <span t-field="o.ref"/>
                    </div>
                    <div class="col-4 text-right">
                        <strong style="white-space:nowrap">:
                            رقم الإشارة
                        </strong>
                    </div>
                </div>
            </div>
            <style>
                div.round {
                border-radius: 35px;
                white-space: nowrap;
                direction: rtl;
                display: block;
                padding: 5px;
                margin: 5px;
                }
            </style>
            <div name="customer_details" class="row">
                <div class="col-1"/>
                <div class="col-9 round">
                    <div class="customer">
                        <div class="row">
                            <span>اسم العميل:</span>
                            <span t-field="o.partner_id.name"/>
                        </div>
                        <div class="row">
                            <span>الرقم الضريبي:</span>
                            <span t-field="o.partner_id.vat"/>
                        </div>
                        <div class="row">
                            <span>كود العميل:</span>
                            <span t-field="o.partner_id.ref"/>
                        </div>
                        <div class="row" style="direction: rtl">
                            <span>عنوان العميل:</span>
                            <span t-field="o.partner_id.street"/>
                            <t t-if="o.partner_id.street and o.partner_id.street2 ">,</t>
                            <span t-field="o.partner_id.street2"/>
                            <t t-if="o.partner_id.street2 and o.partner_id.city">,</t>
                            <span t-field="o.partner_id.city"/>
                            <t t-if="o.partner_id.city and o.partner_id.country_id">,</t>
                            <span t-field="o.with_context(lang='ar_001').partner_id.country_id.name"/>

                            <!--                            <span t-esc='o.partner_id'-->
                            <!--                                  t-options="dict(widget='contact', fields=['address'], no_marker=True, separator=', ')"-->
                            <!--                                  class="add address-inline"/>-->
                        </div>
                    </div>
                </div>
                <div class="col-2"/>
            </div>
            <div class="row">
                <div class="col-1"/>
                <div class="col-9 round">
                    <div class="customer">
                        <div class="row">
                            <span t-if="o.subj_ar">العنوان:</span>
                            <span t-field="o.subj_ar"/>
                        </div>
                        <div class="row">
                            <span t-if="o.contract_ref_ar">مرجع العقد:</span>
                            <span t-field="o.contract_ref_ar"/>
                        </div>
                        <div class="row">
                            <span t-if="o.contract_value_ar">قيمة العقد:</span>
                            <span t-field="o.contract_value_ar"/>
                        </div>
                    </div>
                </div>
                <div class="col-2"/>
            </div>
        </xpath>
        <xpath expr="//table[@name='invoice_line_table']" position="replace">
            <table class="border table table-sm o_main_table" style="margin-top: 5px;direction: rtl;"
                   name="invoice_line_table">
                <thead>
                    <tr>
                        <t t-set="colspan" t-value="11"/>
                        <th name="th_production" class="border text-right">
                            <span>
                                Production
                            </span>
                            <br/>
                            <span>
                                المنتج
                            </span>
                        </th>
                        <th name="th_description" class="border text-right">
                            <span>
                                Description
                            </span>
                            <br/>
                            <span>
                                الوصف
                            </span>
                        </th>
                        <th t-if="o.env.user.has_group('bstt_account_invoice.group_show_product_code')"
                            name="th_internal_reference" class="border text-left">
                            <span>
                                Code
                            </span>
                            <br/>
                            <span>
                                الكود
                            </span>
                        </th>
                        <th name="th_source" class="border d-none text-left" t-if="0">
                            <span>
                                Source Document
                            </span>
                            <br/>
                            <span>
                                المستند المصدر
                            </span>
                        </th>
                        <th name="th_quantity" class="border text-right">
                            <span>
                                Quantity
                            </span>
                            <br/>
                            <span>
                                الكمية
                            </span>
                        </th>
                        <th name="th_priceunit" class="border text-right">
                            <span>
                                Unit price
                            </span>
                            <br/>
                            <span>
                                سعر الوحدة
                            </span>
                        </th>
                        <th name="th_price_unit" t-if="display_discount" class="border text-right">
                            <span>
                                Disc.%
                            </span>
                            <br/>
                            <span>
                                خصم %
                            </span>
                            <t t-set="colspan" t-value="colspan+1"/>
                        </th>
                        <th name="th_taxes" class="border text-right">
                            <span>
                                Taxes
                            </span>
                            <br/>
                            <span>
                                الضرائب
                            </span>
                        </th>
                        <th name="th_subtotal" class="border text-right">
                            <span>
                                Amount
                            </span>
                            <br/>
                            <span>
                                مبلغ
                            </span>
                        </th>
                        <th name="border th_tax_amount" class="text-right">
                            <span>
                                VAT Amount
                            </span>
                            <br/>
                            <span>
                                قيمة الضريبة
                            </span>
                        </th>
                        <th name="th_total" class="border text-right">
                            <span>
                                Total Price
                            </span>
                            <br/>
                            <span>
                                السعر الاجمالي
                            </span>
                        </th>
                    </tr>
                </thead>
                <tbody class="invoice_tbody">
                    <t t-set="current_subtotal" t-value="0"/>
                    <t t-set="lines"
                       t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>


                    <t t-foreach="lines" t-as="line">
                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"
                           groups="account.group_show_line_subtotals_tax_excluded"/>
                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_total"
                           groups="account.group_show_line_subtotals_tax_included"/>

                        <tr class="border"
                            t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                            <t t-if="not line.display_type" name="account_invoice_line_accountable">
                                <td class="border text-right" name="account_invoice_line_name">
                                    <span t-field="line.product_id.name" t-options="{'widget': 'text'}"/>
                                    <t t-if="line.product_id.name != line.with_context(lang='ar_001').product_id.name">
                                        <br/>
                                        <span t-field="line.with_context(lang='ar_001').product_id.name"
                                              t-options="{'widget': 'text'}"/>
                                    </t>
                                </td>
                                <td class="border text-right">
                                    <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                </td>
                                <td t-if="o.env.user.has_group('bstt_account_invoice.group_show_product_code')"
                                    class="border text-right">
                                    <span t-field="line.product_id.default_code"/>
                                </td>
                                <td class="border text-right">
                                    <span t-field="line.quantity"/>
                                    <span t-field="line.product_uom_id" groups="uom.group_uom"/>
                                </td>
                                <td class="border text-right">
                                    <span class="text-nowrap" t-field="line.price_unit"/>
                                </td>
                                <td t-if="display_discount" class="border text-right">
                                    <span class="text-nowrap" t-field="line.discount"/>
                                </td>
                                <td class="border text-right">
                                    <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_ids))"
                                          id="line_tax_ids"/>
                                </td>
                                <td class="border text-right o_price_total">
                                    <span class="text-nowrap" t-field="line.price_subtotal"/>
                                </td>
                                <td class="border text-right">
                                    <span class="text-nowrap" t-field="line.l10n_gcc_invoice_tax_amount"/>
                                </td>
                                <td class="border text-right o_price_total" style="background: #D3D8D7">
                                    <span class="text-nowrap" t-field="line.price_total"/>
                                </td>
                            </t>
                            <t t-if="line.display_type == 'line_section'">
                                <td class="border" colspan="99" style="background: #D3D8D7">
                                    <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                </td>
                                <t t-set="current_section" t-value="line"/>
                                <t t-set="current_subtotal" t-value="0"/>
                            </t>
                            <t t-if="line.display_type == 'line_note'">
                                <td class="border" colspan="99" style="background: #D3D8D7">
                                    <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                </td>
                            </t>
                        </tr>

                        <t t-if="current_section and (line_last or lines[line_index+1].display_type == 'line_section')">
                            <tr class="border is-subtotal text-right" style="background: #D3D8D7  !important;">
                                <td cclass="border" olspan="99" style="background: #D3D8D7  !important;">
                                    <strong class="mr16" style="display: inline-block">Subtotal/الإجمالي الفرعي</strong>
                                    <span t-esc="current_subtotal"
                                          t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                </td>
                            </tr>
                        </t>
                    </t>
                </tbody>
            </table>
            <div class="row border" t-if="o.reserved_note" style="direction: rtl;">
                <div class="col-10 border text-right">
                    <span t-field="o.reserved_note" t-options="{'widget': 'text'}"/>
                </div>
                <div class="col-2 border">
                    <span t-field="o.reserved_amount"
                          t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                </div>
            </div>
        </xpath>
        <xpath expr="//tr[hasclass('o_subtotal')]" position="before">
            <t t-set="display_discount_total"
               t-value="sum((l.discount*(l.quantity*l.price_unit))/100 for l in o.invoice_line_ids)"/>
            <tr t-if="display_discount_total&gt;0" class="border-black o_subtotal">
                <td>
                    <strong>
                        Discount
                        /
                        اجمالي الخصم
                    </strong>
                </td>
                <td class="text-right">
                    <span t-esc="display_discount_total"
                          t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                    <span>SR</span>
                </td>
            </tr>
        </xpath>
        <!--        <xpath expr="//div[@class='clearfix pt-4 pb-3']" position="after" >-->
        <!--            <div class="row p-1 mt-1 bg-light">-->
        <!--                <div class="col-12" ><Strong>Amount in words:  </Strong><span t-esc="o.with_context(lang='ar_001').currency_id.amount_to_text(o.with_context(lang='ar_001').amount_total)"></span></div>-->
        <!--            </div>-->
        <!--        </xpath>-->

        <!--        <xpath expr="//div[@name='customer_code']" position="replace" >-->
        <!--        </xpath>-->
        <xpath expr="//p[@t-if='o.invoice_incoterm_id']" position="after">
            <t t-call="bstt_account_invoice.dun_bank_info"/>
        </xpath>
        <xpath expr="//p[@name=&quot;payment_communication&quot;]" position="replace">
            <p t-if="o.move_type in ('out_invoice', 'in_refund') and o.payment_reference" name="payment_communication">
                <div class="row" style="direction: rtl">
                    <div class="col-4 text-right">
                        <p>رقم إشارة الدفعة:</p>
                    </div>
                    <div class="col-4 text-right">
                        <b>
                            <span t-field="o.payment_reference"/>
                        </b>
                    </div>
                    <div class="col-4 text-left" style="direction: ltr">
                        Payment Reference :
                    </div>
                </div>
            </p>
        </xpath>
        <xpath expr="//div[hasclass('clearfix')]" position="replace">
            <div class="clearfix pt-4 pb-3">
                <div id="total" class="row">
                    <div class="col-6">
                        <table class="table table-sm" style="page-break-inside: avoid;">
                            <tr class="border-black o_subtotal">
                                <td>
                                    <strong>
                                        Subtotal
                                        /
                                        الإجمالي الفرعي
                                    </strong>
                                </td>
                                <td class="text-right">
                                    <span t-field="o.amount_untaxed"/>
                                </td>
                            </tr>
                            <t t-set="tax_totals" t-value="json.loads(o.tax_totals_json)"/>
                            <t t-foreach="tax_totals['subtotals']" t-as="subtotal">
                                <t t-set="subtotal_to_show" t-value="subtotal['name']"/>
                                <t t-call="account.tax_groups_totals"/>
                            </t>
                            <tr class="border-black o_total">
                                <td>
                                    <strong>
                                        Total
                                        /
                                        المجموع
                                    </strong>
                                </td>
                                <td class="text-right">
                                    <span class="text-nowrap" t-field="o.amount_total"/>
                                </td>
                            </tr>
                            <tr class="border-black " t-if="o.reserved_amount">
                                <td t-if="o.reserved_amount" style="text-size: 6px;">
                                    <strong>
                                        المبلغ الإجمالي بعد خصم المبلغ المحتجز
                                    </strong>
                                </td>
                                <td class="text-right" t-if="o.reserved_amount">
                                    <t t-set="display_total_after_reserved" t-value="o.amount_total-o.reserved_amount"/>
                                    <span t-esc="(display_total_after_reserved)"
                                          t-options='{"widget": "monetary", "display_currency": o.company_id.currency_id}'/>
                                </td>
                            </tr>

                            <t t-if="print_with_payments">
                                <t t-if="o.payment_state != 'invoicing_legacy'">
                                    <t t-set="payments_vals" t-value="o.sudo()._get_reconciled_info_JSON_values()"/>
                                    <t t-foreach="payments_vals" t-as="payment_vals">
                                        <tr class="border-black o_total">
                                            <td>
                                                <i class="row">
                                                    <div class="col-7 oe_form_field oe_payment_label">
                                                        Paid on/دفعت في:
                                                    </div>
                                                    <div class="col-5 pl-0 oe_form_field oe_payment_label">
                                                        <t t-out="payment_vals['date']"/>
                                                    </div>
                                                </i>
                                            </td>
                                            <td class="text-right">
                                                <span t-out="payment_vals['amount']"
                                                      t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                            </td>
                                        </tr>
                                    </t>
