<?xml version="1.0"?>
<odoo>

	<record id="form_deduction_cash_register_payment_view" model="ir.ui.view">
		<field name="name">Cash Deduction Register Payment</field>
		<field name="model">cash.deduction.register.payment</field>
		<field name="arch" type="xml">
			<form string="Contract Cash Register Payment">
				<group>
					<group>
						<field name="journal_id" required="1"/>
						<field name="company_id" invisible="1"/>
					</group>
					<group name="group2">
						<label for="amount"/>
						<div name="amount_div" class="o_row">
							<field name="amount"/>
							<field name="currency_id"
								   options="{'no_create': True, 'no_open': True}"
								   groups="base.group_multi_currency"/>
						</div>
						<field name="payment_date"/>
						<field name="communication"/>
					</group>
				</group>
				<footer>
					<button name="action_create" type="object" string="Create"
							class="oe_highlight"/>
				</footer>
			</form>
		</field>
	</record>

	<record id="action_cash_deduction_register_payment_view" model="ir.actions.act_window">
		<field name="name">Contract Cash Register Payment</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">cash.deduction.register.payment</field>
		<field name="view_mode">form</field>
		<field name="view_id" ref="form_deduction_cash_register_payment_view"/>
		<field name="target">new</field>
	</record>

</odoo>