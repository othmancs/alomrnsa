<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_hr_vacation_change_enddate_form" model="ir.ui.view">
        <field name="name">change.enddate.wizard</field>
        <field name="model">change.enddate.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="enddate" readonly="1"/>
                    </group>
                    <group>
                        <field name="new_enddate"/>
                    </group>
                </group>
                <footer>
                    <button name="action_update_enddate" string="Update Vacation End Date" type="object" class="oe_highlight"/>
                    <span class="fs-4 ms-2 fw-bold">or</span>
                    <button class="oe_link" string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
