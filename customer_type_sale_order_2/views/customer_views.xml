<odoo>
    <record id="view_partner_form_inherit_payment_type" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.payment.type</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <!-- إضافة الحقل payment_type بعد حقل category_id -->
            <xpath expr="//field[@name='category_id']" position="before">            
                <field name="payment_type" widget="selection"/>
            </xpath>
        </field>
    </record>
</odoo>
