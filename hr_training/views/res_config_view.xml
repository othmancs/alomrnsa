<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_config_settings_saudi_hr" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.saudi.hr</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="hr.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='hr']/div[hasclass('o_settings_container')]" position="inside">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_right_pane">
                        <label for="expire_training_notification_days" string='Expiring Training Notification'/>
                        <div class="text-muted">
                            Set before notification days for upcoming expiring training.
                        </div>
                        <div>
                            <field name="expire_training_notification_days" required="1"/> Days before
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>